<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:layout_margin="16dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo_iv"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                tools:src="@mipmap/ic_launcher" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="University of Michigan"
                android:textAppearance="@android:style/TextAppearance.Large"/>

            <TextView
                android:id="@+id/city_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ann Arbor, MI"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <TextView
                android:id="@+id/ownership_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Public"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <TextView
                android:id="@+id/tuition_is_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="In-state: $20,000"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tuition_os_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tuition: $40,000"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

            <TextView
                android:id="@+id/earnings_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                tools:text="Earnings: $75,000" />

            <TextView
                android:id="@+id/grad_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Graduation Rate: 90%"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>